<h1> New Song </h1>

<form action="/songs" method="post">
    <label> Name: </label>
    <input type="text" name='song_name' id='Name'>

    <label> Artist: </label>
    <input type="text" name='artist_name' id='Artist Name'><br>

    <label> Genre: </label> <br>   
    <%@genres.each { |genre|%>
        <input type="checkbox" name = 'genres[]' value = "<%= genre.id%>" id='<%=genre.name%>' />
        <%=genre.name%><br>
    <% } %>

    <input type="submit" id="Create">
</form>