<h1>Add a New Song</h1>

<form action="/songs" method="POST">

<label>Name: </label>
<input type="text" name="song[name]" id="Name">

<label>Artist Name: </label>
<input type="text" name="artist[name]" id="Artist Name"> 

<label>Genres: </label>
<% @genres.each do |genre| %>
    <label><%= genre.name %>: </label><input type="checkbox" name="genres[]" id="<%= genre.name %>" value="<%=genre.id %>">
    <% end %>

    <input type="submit" value="New Song" id="Create">
</form>