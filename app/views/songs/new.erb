<h1>Create a new song:</h1>

<form action='/songs' method='post'>
    <label>Name:</label><input type='text' name='song_name' id='Name'>
    
    <label>Artist:</label><input type='text' name='artist_name' id='Artist Name'>

    <label>Genre:</label> 
    <%@genres.each do |genre|%> 
        <input type ="checkbox" name="genres[]" value="<%= genre.id%>" id='<%= genre.name%>' />
        <%=genre.name%>
        <br/>
    <%end%> 

    <input type="submit" name="Create" id="Create">

</form> 

