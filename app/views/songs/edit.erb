<h1>Edit song:</h1>
<form action='/songs/<%= @song.slug %>' method="post">
<input type='hidden' name="_method" value="PATCH">

    <label>Name:</label><input type='text' name='song_name' id='Name' value="<%=@song.name %>">
    
    <label>Artist:</label><input type='text' name='artist_name' id='Artist Name' value="<%=@song.artist.name %>">

    <label>Genre:</label> 
    <%@genres.each do |genre|%> 
        <input type ="checkbox" name="genres[]" value="<%= genre.id%>" id='<%= genre.name%>' />
        <%=genre.name%>
        <br/>
    <%end%> 

    <input type="submit" name="Save" id="Save"> 
</form> 
