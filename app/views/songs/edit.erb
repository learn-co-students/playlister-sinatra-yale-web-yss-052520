<h1>Edit a Song</h1>

<form action="/songs/<%= @song.slug %>" method="POST">
    <input type ="hidden" name="_method" value="PATCH">


<label>Name: </label>
<input type="text" name="song[name]" id="Name" value="<%= @song.name %>">

<label>Artist Name: </label>
<input type="text" name="artist[name]" id="Artist Name" value="<%= @song.artist.name %>"> 

<label>Genres: </label>
<% @genres.each do |genre| %>
    <label><%= genre.name %>: </label><input type="checkbox" name="genres[]" id="<%= genre.name %>" value="<%= genre.id %>">
    <% end %>

    <input type="submit" value="Edit Song" id="Save">
</form>