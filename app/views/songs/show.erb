<h1><%= @song.name %></h1>

<label>Artist:</label>
<ul>
<a href="/artists/<%= @song.artist.slug%>">
<li>
<%= @song.artist.name %>
</li>
</a>
</ul>

<label>Genres:</label>
<ul>
<% @song.genres.each do |genre| %>
    <a href="/genres/<%= genre.slug%>">
        <li> <%= genre.name %> </li>
    </a>
<% end %>

</ul>

<% if flash.has?(:message) %>
  <%= flash[:message] %>
<% end %>



