<label>Artist's Name</label>
<h3><%= @artist.name %></h3>

<label>Artist's songs</label>

<ul>
<% @artist.songs.each do |song|%>
    <a href="/songs/<%= song.slug %>">
        <li><%= song.name %></li>
    </a>
<% end %>
</ul>
<label>Artist's genres</label>
<ul>
<% @artist.genres.each do |genre|%>
    <a href="/genres/<%= genre.slug %>">
        <li><%= genre.name %></li>
    </a>
<% end %>
</ul>